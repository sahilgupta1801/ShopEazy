    public void start()
    {
        jLabel1.setVisible(true);
          String s="Items in Cart : ";
        try{
        Class.forName("oracle.jdbc.driver.OracleDriver");
        Connection con=DriverManager.getConnection("jdbc:oracle:thin:@localhost","system","sahil18");
        Statement sta=con.createStatement();
        ResultSet rs=sta.executeQuery("select P_Name from Cart");
        //rs.next();
        System.out.println("Here");
        while(rs.next())
        {
            s=s+rs.getString(1)+" , ";
        }
        jLabel1.setText(s);
        rs.close();
        
        ResultSet rs1=sta.executeQuery("select sum(price) from Cart");
        rs1.next();
       
        int s1 = 0;
        
        //while(rs1.next())
        //{
            s1=rs1.getInt(1);
        //}
        
        jLabel2.setText("Total Cart Value : " + Integer.toString(s1));
        
        rs1.close();
        con.close();
        sta.close();
        //System.out.println(s);
        
        
        
        }
        catch(Exception e)
        {
            System.out.println(e);
        }
        
    }
